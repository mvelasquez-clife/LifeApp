<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frg_dueno.Pedidos">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/frgPedidosCabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frgPedidosNotificaciones"
                    android:orientation="vertical"
                    android:padding="8dip">
                    <TextView
                        android:id="@+id/frgPedidosCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dip"
                        android:textColor="@color/textWhite"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:text="-" />
                    <TextView
                        android:id="@+id/frgPedidosRuc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textWhite"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:text="-" />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/frgPedidosNotificaciones"
                    android:background="@drawable/btn_transparent"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="4dip"
                    android:src="@drawable/ic_bell_light"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dip"
                android:layout_marginRight="32dip"
                android:padding="8dip">
                <RelativeLayout
                    android:id="@+id/frgPedidosCircleContainer"
                    android:layout_width="144dip"
                    android:layout_height="144dip"
                    android:layout_margin="8dip">
                    <com.mvelasquezp.clife.clientes.controls.Circle
                        android:id="@+id/frgPedidosCircle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        app:circleBackgroundColor="@color/textWarning"
                        app:circleStrokeWidth="2dip" />
                    <!--LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/FrgPedidosCalificacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/textHighlight"
                            android:textSize="24sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tu calificación"
                            android:textAlignment="center"
                            android:textColor="@color/textMuted"
                            android:textSize="10sp"/>
                    </LinearLayout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_centerVertical="true"
                            android:paddingHorizontal="4dip">
                            <ImageView
                                android:id="@+id/FrgPedidosEmoji"
                                android:layout_width="36dip"
                                android:layout_height="36dip"
                                android:layout_centerVertical="true"
                                android:layout_margin="4dip"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:id="@+id/FrgPedidosCalificacion"
                                android:layout_toRightOf="@+id/FrgPedidosEmoji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text=""
                                android:textColor="@color/textHighlight"
                                android:textSize="24sp" />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tu calificación"
                            android:textAlignment="center"
                            android:textColor="@color/textMuted"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/frgPedidosCircleContainer"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Último pedido por"
                        android:textColor="@color/textMuted"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/FrgPedidosImporteUltimo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dip"
                        android:text="S/ 512.00"
                        android:textColor="@color/textSuccess"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Número y fecha"
                        android:textColor="@color/textMuted"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/frgPedidosFechaUltimo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="O117-122393, del 10-02-2019"
                        android:textColor="@color/textTitle"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:paddingBottom="8dip"
                android:text="Resumen de tus últimos pedidos"
                android:textColor="@color/textHighlight" />
        </LinearLayout>
        <ScrollView
            android:layout_below="@+id/frgPedidosCabecera"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/frgPedidosContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>