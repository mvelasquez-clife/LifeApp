<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frg_dependiente.Inicio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dip">
            <TextView
                android:id="@+id/FrgDepInicioNombre"
                android:layout_width="match_parent"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mvelasquezp.clife.clientes.controls.Circle
                    android:id="@+id/FrgDepInicioCircle"
                    android:layout_width="240dip"
                    android:layout_height="240dip"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="16dip"
                    app:circleBackgroundColor="@color/colorCicleActive"
                    app:circleStrokeWidth="4dip" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahora tienes"
                        android:textColor="@color/textMuted"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/FrgDepInicioPuntaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 puntos"
                        android:textColor="@color/textHighlight"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="acumulados"
                        android:textColor="@color/textMuted"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- -->
                <Button
                    android:id="@+id/FrgDepInicioReclamar"
                    android:background="@drawable/btn_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:minHeight="0dip"
                    android:padding="8dip"
                    android:text="Recibir puntos"
                    android:textAllCaps="false"
                    android:textColor="@color/textWhite" />
                <!--Button
                    android:id="@+id/FrgDepInicioAsignar"
                    android:background="@drawable/btn_white"
                    android:elevation="1dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="0dip"
                    android:padding="8dip"
                    android:text="Asignar puntos a un dependiente"
                    android:textAllCaps="false"
                    android:textColor="@color/textHighlight" /-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>