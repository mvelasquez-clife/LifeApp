<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InicioLocalesDependientesDetalle"
    tools:ignore="VectorDrawableCompat">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:background="@mipmap/bg_profile"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:gravity="center_horizontal|bottom"
                android:padding="12dip"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:layout_margin="8dip">
                    <android.support.v7.widget.CardView
                        android:background="@color/textWarning"
                        android:layout_width="120dip"
                        android:layout_height="120dip"
                        android:elevation="12dip"
                        android:id="@+id/view2"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="60dp">
                        <ImageView
                            android:layout_height="120dip"
                            android:layout_width="match_parent"
                            android:id="@+id/DepDetalleImagenPerfil"
                            android:src="@drawable/ic_profile_h"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                        </ImageView>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
                <TextView
                    android:id="@+id/DepDetalleNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar nuevo dependiente"
                    android:textAlignment="center"
                    android:textColor="@color/textWhite"
                    android:textSize="16dip" />
                <TextView
                    android:id="@+id/DepDetalleDni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A continuación, ingrese los datos"
                    android:textAlignment="center"
                    android:textColor="@color/textWhite"
                    android:textSize="12dip" />
            </LinearLayout>
            <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dip"
                android:paddingVertical="12dip">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dip"
                    android:layout_marginTop="18dip"
                    android:text="Información de contacto"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="4dip">
                    <TextView
                        android:id="@+id/DepDetalleLblLocal"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text="Local"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/DepDetalleLocal"
                        android:layout_toRightOf="@+id/DepDetalleLblLocal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/textTitle"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="4dip">
                    <TextView
                        android:id="@+id/DepDetalleLblEmail"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text="e-mail"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/DepDetalleEmail"
                        android:layout_toRightOf="@+id/DepDetalleLblEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/textTitle"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="4dip">
                    <TextView
                        android:id="@+id/DepDetalleLblTelefono"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text="Teléfono"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/DepDetalleTelefono"
                        android:layout_toRightOf="@+id/DepDetalleLblTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/textTitle"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dip">
                    <TextView
                        android:id="@+id/DepDetalleLblTpusuario"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text=""
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/DepDetalleTpusuario"
                        android:layout_toRightOf="@+id/DepDetalleLblTpusuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/textSuccess"
                        android:textSize="14sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/DepDetalleRlAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dip"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/DepDetalleLblAscender"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text=""
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="12sp" />
                    <Button
                        android:id="@+id/DepDetalleAscender"
                        android:background="@drawable/btn_cyan"
                        android:layout_toRightOf="@+id/DepDetalleLblAscender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:minHeight="0dip"
                        android:minWidth="0dip"
                        android:paddingHorizontal="12dip"
                        android:paddingVertical="6dip"
                        android:text="Hacer administrador"
                        android:textAllCaps="false"
                        android:textColor="@color/textWhite"
                        android:textSize="14sp" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dip"
                    android:layout_marginTop="18dip"
                    android:text="Código de acceso"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="El dependiente deberá utilizar el siguiente código para iniciar sesión en la app. Para ello, elige la opción 'Formo parte de un salón' en la pantalla de login y escanea el QR."
                    android:textColor="@color/textHighlight"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/DepDetalleQr"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="200dip"
                    android:layout_height="200dip"
                    android:layout_marginTop="4dip"
                    android:layout_marginBottom="16dip"
                    android:src="@drawable/ic_logo"/>
                <Button
                    android:id="@+id/DepDetalleBtnVolver"
                    android:background="@drawable/btn_primary"
                    android:elevation="1dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dip"
                    android:minHeight="0dip"
                    android:padding="8dip"
                    android:text="Volver a la lista de dependientes"
                    android:textAllCaps="false"
                    android:textColor="@color/textWhite"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>