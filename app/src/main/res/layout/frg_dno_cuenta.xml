<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".frg_dueno.Cuenta"
    tools:ignore="VectorDrawableCompat"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="48dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!-- -->
            <LinearLayout
                android:background="@mipmap/bg_waves"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:gravity="center_horizontal|bottom"
                android:padding="12dip"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:layout_margin="8dip">
                    <android.support.v7.widget.CardView
                        android:background="@color/textWarning"
                        android:layout_width="120dip"
                        android:layout_height="120dip"
                        android:elevation="12dip"
                        android:id="@+id/view2"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="60dp">
                        <ImageView
                            android:layout_height="120dip"
                            android:layout_width="match_parent"
                            android:id="@+id/FrgCuentaImagenPerfil"
                            android:src="@drawable/ic_profile_h"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                        </ImageView>
                    </android.support.v7.widget.CardView>
                    <ImageButton
                        android:id="@+id/FrgCuentaEditarImg"
                        android:background="@drawable/btn_transparent"
                        android:layout_width="32dip"
                        android:layout_height="32dip"
                        android:elevation="16dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="fitCenter"
                        android:padding="2dip"
                        app:srcCompat="@drawable/ic_camera" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/FrgCuentaRzsocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Apellidos Apellidos"
                    android:textAlignment="center"
                    android:textColor="@color/textWhite"
                    android:textSize="16dip" />
                <TextView
                    android:id="@+id/FrgCuentaRucDni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RUC 10101010101"
                    android:textAlignment="center"
                    android:textColor="@color/textWhite"
                    android:textSize="12dip" />
            </LinearLayout>
            <!-- -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dip"
                android:paddingVertical="12dip">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dip"
                    android:text="Datos de contacto"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/FrgCuentaLblEmail"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text="e-mail"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/FrgCuentaEmail"
                        android:layout_toRightOf="@+id/FrgCuentaLblEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="16sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/FrgCuentaLblTelefono"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text="Teléfono"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/FrgCuentaTelefono"
                        android:layout_toRightOf="@+id/FrgCuentaLblTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="16sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/FrgCuentaLblCumpleanios"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text="F.Nacim."
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/FrgCuentaCumpleanios"
                        android:layout_toLeftOf="@+id/FrgCuentaBtnCumpleanios"
                        android:layout_toRightOf="@+id/FrgCuentaLblCumpleanios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="16sp" />
                    <ImageButton
                        android:id="@+id/FrgCuentaBtnCumpleanios"
                        android:background="@drawable/btn_red"
                        android:layout_width="32dip"
                        android:layout_height="32dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:padding="4dip"
                        app:srcCompat="@drawable/ic_cumpleanios" />
                </RelativeLayout>
                <Button
                    android:id="@+id/FrgCuentaBtnGuardar"
                    android:background="@drawable/btn_primary"
                    android:elevation="1dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="0dip"
                    android:layout_marginVertical="6dip"
                    android:padding="6dip"
                    android:text="Actualizar mis datos"
                    android:textAllCaps="false"
                    android:textColor="@color/textWhite"
                    android:textSize="14sp" />
                <!-- -->
                <TextView
                    android:id="@+id/FrgCuentaLblBlockVendedorHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dip"
                    android:layout_marginTop="16dip"
                    android:text="Datos de mi vendedor"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/FrgCuentaLblBlockVendedorNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/FrgCuentaLblVendedor"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text="Nombre"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/FrgCuentaVendedor"
                        android:layout_toRightOf="@+id/FrgCuentaLblVendedor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dip"
                        android:textSize="16sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/FrgCuentaLblBlockVendedorTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/FrgCuentaLblVndtlf"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="8dip"
                        android:text="Celular"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textHighlight"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/FrgCuentaVndtlf"
                        android:layout_toLeftOf="@+id/FrgCuentaBtnLlamada"
                        android:layout_toRightOf="@+id/FrgCuentaLblVndtlf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="8dip"
                        android:textSize="16sp" />
                    <ImageButton
                        android:id="@+id/FrgCuentaBtnLlamada"
                        android:background="@drawable/btn_blue"
                        android:layout_width="32dip"
                        android:layout_height="32dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:padding="4dip"
                        app:srcCompat="@drawable/ic_llamada" />
                </RelativeLayout>
                <!-- -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dip"
                    android:layout_marginTop="24dip"
                    android:text="Otras opciones"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <!--Button
                    android:id="@+id/FrgCuentaBtnLogros"
                    android:background="@drawable/btn_primary"
                    android:elevation="1dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="0dip"
                    android:layout_marginVertical="6dip"
                    android:padding="6dip"
                    android:text="Ver mis logros y recompensas"
                    android:textAllCaps="false"
                    android:textColor="@color/textWhite"
                    android:textSize="14sp" /-->

                <Button
                    android:id="@+id/FrgCuentaBtnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dip"
                    android:background="@drawable/btn_white"
                    android:elevation="1dip"
                    android:minHeight="0dip"
                    android:padding="6dip"
                    android:text="Cerrar mi sesión"
                    android:textAllCaps="false"
                    android:textColor="@color/textHighlight"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>