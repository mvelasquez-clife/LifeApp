<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_dark"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="16dip"
        android:orientation="vertical"
        android:padding="16dip">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="256dip"
            android:layout_height="256dip"
            android:layout_margin="24dip"
            android:src="@drawable/ic_logo" />

        <EditText
            android:id="@+id/lgnEtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="RUC o DNI"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:textColor="@color/textWhite"
            android:textColorHint="@color/textWhite"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/lgnEtClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Ingresa tu clave"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="8dip"
            android:textColor="@color/textWhite"
            android:textColorHint="@color/textWhite"
            android:textSize="14sp" />

        <Button
            android:id="@+id/lgnIngresar"
            android:background="@drawable/btn_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="16dip"
            android:minHeight="0dip"
            android:padding="12dip"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:text="INGRESAR" />

        <Button
            android:id="@+id/lgnDependiente"
            android:background="@drawable/btn_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="8dip"
            android:minHeight="0dip"
            android:padding="8dip"
            android:textAllCaps="false"
            android:textColor="@color/textWhite"
            android:textSize="14sp"
            android:text="Formo parte de un salÃ³n" />

    </LinearLayout>

    <TextView
        android:id="@+id/lgnClave"
        android:autoLink="all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dip"
        android:linksClickable="false"
        android:selectAllOnFocus="false"
        android:text="@string/login_olvido_clave"
        android:textColor="@color/textWhite" />

    <TextView
        android:id="@+id/lgnNuevo"
        android:autoLink="all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dip"
        android:linksClickable="false"
        android:selectAllOnFocus="false"
        android:text="@string/login_nuevo_usuario"
        android:textColor="@color/textWhite" />
</RelativeLayout>