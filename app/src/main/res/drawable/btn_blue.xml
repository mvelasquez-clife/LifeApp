<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/btn_blue_dark"
                android:endColor="@color/btn_blue_dark"
                android:angle="270" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="5dp"
                android:right="8dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/btn_blue_dark"
                android:startColor="@color/btn_blue_dark"
                android:angle="270" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="5dp"
                android:right="8dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="@color/btn_disabled_light"
                android:startColor="@color/btn_disabled_light"
                android:angle="270" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="5dp"
                android:right="8dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/btn_blue_light"
                android:startColor="@color/btn_blue_light"
                android:angle="270" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="5dp"
                android:right="8dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>